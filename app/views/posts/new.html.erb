<h1>Create a new Post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>Please see below the errors</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="field <%=" field_with_errors" if @post.errors[:title].any?%>">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field <%=" field_with_errors" if @post.errors[:description].any?%>">
    <%= f.label :description %>
    <%= f.text_area :description %><br>
  </div>

  <div class="field <%=" field_with_errors" if @post.errors[:category_name].any?%>">
    <%= f.label :category_name %>
    <%= f.text_field :category_name %><br>
  </div>

  <%= f.submit "Create" %>
<% end %>
